diff -Nur a/tools/cross-wine32 b/tools/cross-wine32
--- a/tools/cross-wine32	1970-01-01 01:00:00.000000000 +0100
+++ b/tools/cross-wine32	2022-11-13 00:36:46.010367522 +0000
@@ -0,0 +1,16 @@
+[binaries]
+c = 'winegcc'
+ar = 'ar'
+strip = 'strip'
+pkgconfig = 'i686-pc-linux-gnu-pkg-config'
+
+[properties]
+c_args = ['-m32']
+c_link_args = ['-m32', '-mwindows', '-L/nonexistant']
+needs_exe_wrapper = true
+
+[host_machine]
+system = 'linux'
+cpu_family = 'x86'
+cpu = 'i686'
+endian = 'little'
